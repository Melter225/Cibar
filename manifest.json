{
  "manifest_version": 3,
  "name": "Cibar",
  "version": "1.0",
  "description": "A Chrome extension built to combat cyberbullying",
  "action": {
    "default_popup": "src/popup.html"
  },
  "permissions": [],
  "background": {
    "service_worker": "dist/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/content.js"]
    }
  ]
}
